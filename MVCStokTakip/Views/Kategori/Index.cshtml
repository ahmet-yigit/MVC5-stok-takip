@using MVCStokTakip.Models.Entity;
@model List<TBLKategori>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Kategoriler</h2><br />

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kategori Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.id</td>
                <td>@x.ad</td>
                <td><a href="/Kategori/KategoriSil/@x.id" class="btn btn-danger">Sil</a></td>
                <td><a href="/Kategori/KategoriGetir/@x.id" class="btn btn-info">Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/Kategori/YeniKategori" class="btn btn-primary">Kategori Ekle</a>