
@model MVCStokTakip.Models.Entity.TBLSatislar
@{
    ViewBag.Title = "YeniSatis";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Yeni Satış Ekleme Sayfası</h2>
<br />

<form method="post">
    <label>Ürün Adı</label>
    @Html.DropDownListFor(m => m.TBLUrunler.id, (List<SelectListItem>)ViewBag.urun, new { @class = "form-control" })
    <br />
    <label>Personel Adı</label>
    @Html.DropDownListFor(m => m.TBLPersonel.id, (List<SelectListItem>)ViewBag.personel, new { @class = "form-control" })
    <br />
    <label>Müşteri Adı</label>
    @Html.DropDownListFor(m => m.TBLMusteri.id, (List<SelectListItem>)ViewBag.musteri, new { @class = "form-control" })
    <br />
    <label>Fiyat</label>
    @Html.TextBoxFor(x => x.fiyat, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Kaydet</button>
</form>
