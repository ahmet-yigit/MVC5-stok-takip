@using MVCStokTakip.Models.Entity;
@model List<TBLUrunler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Ürünler</h2>
<br />

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Ürün Adı</th>
        <th>Marka</th>
        <th>Stok</th>
        <th>Alış Fiyat</th>
        <th>Satış Fiyat</th>
        <th>Kategori</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.id</td>
                <td>@x.ad</td>
                <td>@x.marka</td>
                <td>@x.stok</td>
                <td>@x.alisfiyat</td>
                <td>@x.satisfiyat</td>
                <td>@x.TBLKategori.ad</td>
                <td><a href="/Urun/UrunSil/@x.id" class="btn btn-danger">Sil</a></td>
                <td><a href="/Urun/UrunGetir/@x.id" class="btn btn-info">Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/Urun/YeniUrun" class="btn btn-primary">Ürün Ekle</a>

