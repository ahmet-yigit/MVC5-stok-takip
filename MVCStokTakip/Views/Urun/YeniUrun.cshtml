@using MVCStokTakip.Models.Entity
@model MVCStokTakip.Models.Entity.TBLUrunler

@{
    ViewBag.Title = "YeniUrun";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Yeni Ürün Ekleme Sayfası</h2>
<br />

<form method="post">
    <label>Ürün Adı</label>
    @Html.TextBoxFor(x => x.ad, new { @class = "form-control" })
    <br />
    <label>Marka</label>
    @Html.TextBoxFor(x => x.marka, new { @class = "form-control" })
    <br />
    <label>Stok</label>
    @Html.TextBoxFor(x => x.stok, new { @class = "form-control" })
    <br />
    <label>Alış Fiyatı</label>
    @Html.TextBoxFor(x => x.alisfiyat, new { @class = "form-control" })
    <br />
    <label>Satış Fiyatı</label>
    @Html.TextBoxFor(x => x.satisfiyat, new { @class = "form-control" })
    <br />
    <label>Kategori</label>
    @Html.DropDownListFor(m => m.TBLKategori.id, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Kaydet</button>
</form>
